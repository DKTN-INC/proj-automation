# Project Automation Environment Configuration
# Copy this file to .env and fill in your actual values

# Discord Bot Configuration
# REQUIRED: Discord Bot token used to run the bot. Add this before starting the bot.
DISCORD_BOT_TOKEN=your_discord_bot_token_here

# Optional webhook URL for direct uploads (used by some scripts).
DISCORD_WEBHOOK_URL=your_discord_webhook_url_here

# Optional: Guild ID for faster command sync (your Discord server ID)
# DISCORD_GUILD_ID=your_guild_id_here

# OpenAI API Configuration (for AI features)
# OpenAI (optional) — set if you want AI features
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-3.5-turbo
WHISPER_MODEL=whisper-1

# GitHub Integration (for PR creation and issue tracking)
GITHUB_TOKEN=your_github_personal_access_token_here

# Bot Admin Users (comma-separated Discord user IDs)
# These users can upload files to helpdocs directory
DISCORD_ADMIN_IDS=123456789012345678,987654321098765432

# Currency Formatting Defaults
CURRENCY_CODE=GBP
CURRENCY_LOCALE=en_GB
CURRENCY_SYMBOL=£

# Team Configuration
TEAM_NAME=Project Automation Team
TEAM_PURPOSE=Design, build, and deliver high-quality software efficiently and safely.
TEAM_BOT_NAME=Probo
DEFAULT_REPO=dktn7/proj-automation

# Google API Configuration (optional)
GOOGLE_API_KEY=your_google_api_key_here
GOOGLE_CX=your_google_custom_search_engine_id_here

# AWS (optional) — required only for S3 presigned upload tests / real uploads
AWS_ACCESS_KEY_ID=your_aws_access_key_id_here
AWS_SECRET_ACCESS_KEY=your_aws_secret_access_key_here

# Optional runtime guard: set to 'true' to make local helper scripts fail when required secrets
# are missing (useful in CI). Default: false
ENFORCE_REQUIRED_SECRETS=false